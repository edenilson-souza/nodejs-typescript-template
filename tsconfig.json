{
    "compilerOptions": {
        "incremental": true,
        "target": "ESNext",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "outDir": "dist",
        "types": ["jest", "node"]
    },
    "include": ["src/**/*.ts", "src/**/*.json", "src/**/*.html", "src/util/NewDate.test.ts.old", "src/util/NewDate.ts.old", "src/util/compressor.ts.old"],
    "exclude": ["**/*.test.ts", "node_modules", "dist", "coverage"]
}
